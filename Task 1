#include<stdio.h>
int main()
{
    int n,i,a[100],large; //Integer Array of size 100
    
    printf("Enter the number of elements = ");
    scanf("%d",&n);
    
    // Loop to read array elements
    for(i=0;i<n;i++)
    {
        printf("Enter a value = ");
        scanf("%d",&a[i]);
    }
    
    // Assume the first element is the largest
    large = a[0];
    
    // Loop to find the largest element
    // Note: The original code has an error in the loop condition: i<=n-1; should be i<n or i<=n-1. 
    // The provided code used i<=n-1; which is correct for array indices 0 to n-1 if starting from i=1.
    for(i=1;i<=n-1;i++)
    {
        if(large < a[i])
            large = a[i];
    }
    
    printf("\nLargest Number is = %d\n",large); // Added \n for clean output
    
    return 0;
}
